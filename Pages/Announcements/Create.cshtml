@page
@model ASAG_ILIK_nvOM.Pages.Announcements.CreateModel
@{
    ViewData["Title"] = "İlan Kaydet";

}

<br />
<h2 class="text-info">Yeni İlan Kaydet</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-7">
                <label asp-for="Announcements.Title">İlan Başlığı</label>
            </div>
            <div class="col-4">
                <input asp-for="Announcements.Title" class="form-control" />
            </div>
            <span asp-validation-for="Announcements.Title" class="text-danger"></span>

            <div class="col-7">
                <label asp-for="Announcements.Description">Detaylar</label>
            </div>
            <div class="col-4">
                <input asp-for="Announcements.Description" class="form-control" />
            </div>
            <span asp-validation-for="Announcements.Description" class="text-danger"></span>
            <div class="col-7">
                <label asp-for="Announcements.Price">İlan Fiyatı</label>
            </div>
            <div class="col-4">
                <input asp-for="Announcements.Price" class="form-control" />
            </div>
            <span asp-validation-for="Announcements.Price" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2 offset-7">
                <input type="submit" value="Kaydet" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Geri Dön</a>
            </div>
        </div>
    </form>
</div>
